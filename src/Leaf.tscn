resource_name = "Leaf"
script/source = "extends RigidBody3D


class_name Leaf

const MAX_SPEED:float = 100.0
const INPUT_FORCE:float = 0.1
const DRAG_FORCE:float = 0.5


var input_torque:float = 0.0


func _process(delta):
	input_torque = 0.0
	if Input.is_action_pressed(\"ui_left\"):
		input_torque += INPUT_FORCE
	if Input.is_action_pressed(\"ui_right\"):
		input_torque -= INPUT_FORCE
#	if Input.is_action_pressed(\"ui_up\"):
#		input_force.y += INPUT_FORCE
#	if Input.is_action_pressed(\"ui_down\"):
#		input_force.y -= INPUT_FORCE


func _integrate_forces(state:PhysicsDirectBodyState3D):
	if input_torque != 00.:
		apply_torque(Vector3(0, 0, input_torque))
	
	var rotation:float = global_transform.basis.y.x
	var is_flipped:bool = global_transform.basis.y.y < 0.0
	var horizontal_force:float = rotation
	if is_flipped: horizontal_force *= -1
	
	# If the leaf is more vertical, it should fall faster.
	var rotation_abs:float = abs(rotation) # 0.0 is vertical --> 1.0 is horizontal
	var vertical_force = lerp(0.0, -0.5, rotation_abs)
	
	# Use the leaf's rotation to add force which should simulate
	# the air/atmo pressure being applied to the turned surface of the leaf.
	apply_central_force(Vector3(horizontal_force, vertical_force, 0))
	
	# Cap the leaf velocity
	if state.linear_velocity.length() > MAX_SPEED:
		state.linear_velocity = state.linear_velocity.normalized() * MAX_SPEED
	
