	var leaf_origin:Vector3 = Vector3(0, START_Y, 0)
	var leaf_transform = Transform3D(Basis(), leaf_origin)
	leaf.set_global_transform(leaf_transform)
	
	camera.target_node = leaf
	current_leaf = leaf
